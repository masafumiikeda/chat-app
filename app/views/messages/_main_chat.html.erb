<div class="chat-top_header">
  <div class="header_room-name">hogefuga</div>
  <div class="end-button"><a href="#">チャットを終了する</a></div>
</div>
<div class="chat-messages">
  <div class="chat-message">
    <div class="message_name_date">
      <div class="message_name">Tom</div>
      <div class="message_date">2022/8/26(Fri) 10:00:00</div>
    </div>
    <div class="message">
      <div class="message-content">おはよう</div>
    </div>
    <div class="message_name_date">
      <div class="message_name">Sim</div>
      <div class="message_date">2022/8/26(Fri) 10:00:00</div>
    </div>
    <div class="message">
     <div class="message-content"></div>
    </div>
  </div>
</div>
<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>